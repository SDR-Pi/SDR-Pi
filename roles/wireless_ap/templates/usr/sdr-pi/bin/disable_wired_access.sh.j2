#!/bin/bash

rm -f /etc/dnsmasq.d/eth0
rm -f /etc/network/interfaces.d/eth0

while true; do
    read -p "Do you wish to reboot to activate the new configuration?" yn
    case $yn in
        [Yy]* ) sudo reboot; break;;
        [Nn]* ) exit;;
        * ) echo "Please answer yes or no.";;
    esac
done